<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
       		<pattern>%d{HH:mm:ss.SSS} %magenta(%-5level) %cyan(%-45logger) : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.datastax.oss.driver"  level= "ERROR"/>
    <logger name="com.datastax.bootcamp"    level= "INFO"/>
    <logger name="BOOTCAMP"    				level= "INFO"/>
    <logger name="Exercice1"  				level= "INFO"/>
</configuration>
