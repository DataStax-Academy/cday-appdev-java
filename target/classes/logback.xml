<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
       		<pattern>%d{HH:mm:ss.SSS} %-5level %-12logger : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    
    <logger name="com.datastax.oss.driver"  level= "ERROR"/>
    
    <logger name="BOOTCAMP"    				level= "INFO"/>
    <logger name="Exercice1"  				level= "INFO"/>
    <logger name="Exercice2"  				level= "INFO"/>
    <logger name="Exercice3"  				level= "INFO"/>
    <logger name="Exercice4"  				level= "INFO"/>
    
</configuration>
